                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/white_overlay_85"-->
                <!--android:padding="@dimen/defaultPadding"-->
                <!--android:text="@string/rating"-->
                <!--android:textColor="@color/title_black_transparent"-->
