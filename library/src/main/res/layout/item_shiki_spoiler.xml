<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/altarixUiText.TextTitle"
        android:text="spoiler"
        android:textColor="@color/darkBlue"
        android:background="?attr/selectableItemBackground"
        />

    <LinearLayout
        android:id="@+id/llSpoilerBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/defaultPaddingMini"
        android:paddingBottom="@dimen/defaultPaddingMini"
        android:paddingLeft="@dimen/defaultPadding"
        android:paddingRight="@dimen/defaultPadding"
        android:background="@drawable/notify_style_spoiler"
        android:visibility="gone"
        android:orientation="vertical"/>

</LinearLayout>