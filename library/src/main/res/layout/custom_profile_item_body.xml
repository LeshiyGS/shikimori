<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContainerBackAnimated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/paddingMapInfoLeft"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/defaultPaddingMini"
    android:paddingRight="@dimen/defaultPadding4"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/defaultPaddingMini"
        android:layout_marginEnd="@dimen/defaultPaddingMini"
        android:paddingLeft="@dimen/defaultPadding6"
        android:paddingRight="@dimen/defaultPadding6"
        android:visibility="gone"
        android:textColor="@android:color/white"
        style="@style/shadowText"
        android:background="@drawable/notify_style"
        />

    <TextView
        android:id="@+id/tvText"
        style="?attr/altarixUiAttrTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvCount"
        android:layout_toRightOf="@+id/ivImage"
        android:layout_toEndOf="@+id/ivImage"
        android:layout_toStartOf="@+id/tvCount"
        android:text="test2" />

</RelativeLayout>