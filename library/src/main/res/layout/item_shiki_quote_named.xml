<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notify_style_quote"
    android:padding="@dimen/defaultPadding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivUser"
                android:layout_width="@dimen/defaultPaddingEnormous"
                android:layout_height="@dimen/defaultPaddingEnormous"
                android:layout_marginTop="@dimen/defaultPaddingMini"
                />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultPaddingEnormous"
                style="@style/altarixUiText.TextTitle"
                android:padding="@dimen/defaultPaddingMini"
                />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/llQuoteBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>