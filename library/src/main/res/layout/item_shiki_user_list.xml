<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/defaultPaddingMini"
    android:paddingRight="@dimen/defaultPaddingMini"
    android:paddingTop="@dimen/defaultPadding4"
    android:paddingBottom="@dimen/defaultPadding4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shiki_list_selector">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/altarixUiLabel.miniblack"
            android:text="status"
            android:paddingLeft="@dimen/defaultPaddingMini"
            android:paddingRight="@dimen/defaultPaddingMini"
            android:textColor="@color/white_overlay_60"
            android:ellipsize="end"
            android:lines="1"/>

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="@dimen/paddingPosterH"
            android:layout_height="@dimen/paddingPosterW"
            android:layout_below="@+id/tvStatus"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/altarixUiText"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/tvStatus"
            android:layout_marginLeft="@dimen/defaultPaddingMini"
            android:layout_toEndOf="@+id/tvStatus"
            android:layout_toRightOf="@+id/tvStatus"
            android:ellipsize="end"
            android:text="name"
            android:lines="1" />

        <TextView
            android:id="@+id/tvRusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/altarixUiLabel.mini"
            android:layout_toEndOf="@+id/ivPoster"
            android:layout_toRightOf="@+id/ivPoster"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="@dimen/defaultPaddingMini"
            android:text="rusname"
            android:ellipsize="end"
            android:lines="1"/>

    </RelativeLayout>
</FrameLayout>
