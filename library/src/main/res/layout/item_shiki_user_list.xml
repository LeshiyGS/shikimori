<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/defaultPaddingMini"
    android:paddingRight="@dimen/defaultPaddingMini"
    android:paddingTop="@dimen/defaultPadding4"
    android:paddingBottom="@dimen/defaultPadding4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shiki_list_selector">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="@dimen/paddingPosterH80"
            android:layout_height="@dimen/paddingPosterW115"
            android:scaleType="centerCrop"
            android:layout_below="@+id/tvStatus" />


        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/altarixUiLabel.miniblack"
            android:text="status"
            android:paddingLeft="@dimen/defaultPaddingMini"
            android:paddingRight="@dimen/defaultPaddingMini"
            android:textColor="@color/white_overlay_60"
            android:ellipsize="end"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/ivPoster"
            android:layout_alignEnd="@+id/ivPoster"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/altarixUiText"
            android:textStyle="bold"
            android:ellipsize="end"
            android:text="name"
            android:lines="1"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tvRusName"
            android:layout_alignStart="@+id/tvRusName"
            android:gravity="top" />

        <TextView
            android:id="@+id/tvRusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/altarixUiLabel.mini"
            android:layout_toEndOf="@+id/ivPoster"
            android:layout_toRightOf="@+id/ivPoster"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="@dimen/defaultPaddingMini"
            android:text="rusname"
            android:ellipsize="end"
            android:lines="1"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRusName"
            android:layout_marginLeft="@dimen/defaultPadding"
            android:layout_toRightOf="@+id/ivPoster"
            android:layout_toEndOf="@+id/ivPoster"
            style="@style/altarixUiText"
            />

    </RelativeLayout>
</FrameLayout>
