<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/defaultPadding4"
    android:paddingStart="@dimen/defaultPadding4">

    <LinearLayout
        android:id="@+id/llLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/defaultPaddingMini"
        android:paddingTop="@dimen/defaultPaddingMini">

        <TextView
            android:id="@+id/tvLabel"
            style="?attr/altarixUiAttrLabelTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Title"
            android:textSize="@dimen/guTextSizeLarge" />

        <TextView
            android:id="@+id/tvCount"
            style="@style/altarixUiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/notify_style_green"
            android:paddingLeft="@dimen/defaultPadding4"
            android:paddingRight="@dimen/defaultPadding4"
            android:textColor="@color/white_overlay_60"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvCountNegative"
            style="@style/altarixUiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultPadding4"
            android:background="@drawable/notify_style_red"
            android:paddingLeft="@dimen/defaultPadding4"
            android:paddingRight="@dimen/defaultPadding4"
            android:textColor="@color/white_overlay_60"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/altarixUiAttrDividerColor" />

    <LinearLayout
        android:id="@+id/llCheckBoxList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
</LinearLayout>