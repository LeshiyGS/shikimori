<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vBack"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/black_owerlay_60"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/main_rippleselector"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_shiki_play" />

    <TextView
        android:id="@+id/tvMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/defaultPaddingMini"
        android:paddingRight="@dimen/defaultPaddingMini"
        android:text="VK"
        style="@style/altarixUiText"
        android:textColor="@color/black_owerlay_60"
        android:layout_gravity="bottom"
        android:background="@color/white_overlay_80"
        />

</FrameLayout>