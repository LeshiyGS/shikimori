<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/d_border"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_item_preview"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/d_imageview"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/missing_preview" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_item_preview"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_item_preview"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray_ligth"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tv_item_name"
        android:layout_alignRight="@+id/tv_item_name"
        android:layout_below="@+id/tv_item_name"
        android:layout_marginTop="5dp"
        android:background="#88000000" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_ligth"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/tv_status"
        android:textColor="@color/gray_ligth"
        android:text="TextView" />

</RelativeLayout>
