<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context=".Activity_OST_Player" >

    <LinearLayout
        android:id="@+id/lv_card"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_alignTop="@+id/relativeLayout1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/w_imageview"
            android:padding="1dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lv_card" >

        <LinearLayout
            android:id="@+id/lv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_repiate"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/w_button_custom"
                android:onClick="onRepiate"
                android:scaleType="fitXY"
                android:src="@drawable/repeat"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btn_prew"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/w_button_custom"
                android:onClick="prewAudio"
                android:scaleType="fitXY"
                android:src="@drawable/pre" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/w_button_custom"
                android:onClick="onPlayPause"
                android:scaleType="fitXY"
                android:src="@drawable/play"
                android:tag="@drawable/w_button_custom" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/w_button_custom"
                android:onClick="nextAudio"
                android:scaleType="fitXY"
                android:src="@drawable/next"
                android:tag="@drawable/w_button_custom" />

            <ImageButton
                android:id="@+id/btn_random"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/w_button_custom"
                android:onClick="onRandom"
                android:scaleType="fitXY"
                android:src="@drawable/shuffle"
                android:tag="@drawable/w_button_custom"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/lbl_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pb_track"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/w_border"
            android:text="" />

        <ListView
            android:id="@+id/lv_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lbl_track"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/w_border"
            android:paddingLeft="5dp" >

        </ListView>

        <SeekBar
            android:id="@+id/pb_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lv_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/pb_track"
            android:background="@drawable/w_button_custom"
            android:onClick="onDestroy"
            android:scaleType="fitXY"
            android:src="@drawable/eject" />

    </RelativeLayout>

</RelativeLayout>