<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w_border"
    android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_item_preview"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/w_imageview"
                android:padding="1dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/lbl_manga_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_item_preview"
                android:layout_toRightOf="@+id/img_item_preview"
                android:text="Large Text"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lbl_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lbl_manga_name"
                android:layout_alignParentRight="true"
                android:background="#4682b4"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="NEW"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/lbl_manga_name"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lbl_manga_name"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:background="#aaaaaa" />

            <ImageView
                android:id="@+id/img_news_prew"
                android:layout_width="60dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ImageView01"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/w_imageview"
                android:padding="1dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/lbl_manga_anime_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageView01"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/img_news_prew"
                android:layout_toRightOf="@+id/img_item_preview"
                android:ellipsize="end"
                android:lines="1"
                android:text="TextView"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/ll_comment_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/img_item_preview"
                android:layout_toLeftOf="@+id/img_news_prew"
                android:orientation="vertical" >

            </LinearLayout>

        </RelativeLayout>

</LinearLayout>
