<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/w_border"
    android:gravity="top"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_h_image"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/w_imageview"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/ava" />

    <TextView
        android:id="@+id/lbl_h_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_h_image"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/img_h_image"
        android:gravity="center"
        android:text="TextView" />

    <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_above="@+id/lbl_h_info"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/img_h_image"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#aaaaaa" />
    
    <TextView
        android:id="@+id/lbl_h_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_h_image"
        android:gravity="center"
        android:text="Large Text" />

    <TextView
        android:id="@+id/lbl_h_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/lbl_h_date"
        android:gravity="bottom|center"
        android:text="Large Text"
        android:textStyle="bold" />

</RelativeLayout>
