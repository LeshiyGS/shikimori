<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#99000000"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawVerticalTrack="false" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_menu_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/d_imageview"
                android:padding="1dp"
                android:src="@drawable/ava" />

            <ru.gslive.shikimori.org.v2.View_GridView
                android:id="@+id/lv_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/iv_menu_avatar"
                android:columnWidth="150dp"
                android:fastScrollAlwaysVisible="false"
                android:fastScrollEnabled="false"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector="@drawable/d_listview_custom"
                android:numColumns="1"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dp" >

            </ru.gslive.shikimori.org.v2.View_GridView>

            <TextView
                android:id="@+id/tv_unread"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/tv_menu_login"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_menu_login"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_dark_shiki"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_menu_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_menu_avatar"
                android:layout_alignTop="@+id/iv_menu_avatar"
                android:layout_toLeftOf="@+id/tv_unread"
                android:layout_toRightOf="@+id/iv_menu_avatar"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingLeft="5dp"
                android:textColor="@color/gray_ligth"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_menu_shiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray_ligth"
        android:textSize="30sp" />

</RelativeLayout>