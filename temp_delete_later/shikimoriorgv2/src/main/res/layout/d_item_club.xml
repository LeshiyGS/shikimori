<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_all"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/d_border"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_item_preview"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iv_item_preview"
        android:background="#99BBBBBB"
        android:text="TextView"
        android:textColor="@color/gray_ligth"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_preview"
        android:layout_alignLeft="@+id/iv_item_preview"
        android:layout_alignRight="@+id/iv_item_preview"
        android:background="#99BBBBBB"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gray_ligth"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ru.gslive.shikimori.org.v2.View_ImageView
        android:id="@+id/iv_item_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/d_imageview"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/missing_preview" />

</RelativeLayout>
