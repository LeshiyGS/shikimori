<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/d_border"
    android:gravity="top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_h_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/gray_ligth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_h_image"
            android:layout_width="60dp"
            android:layout_height="85dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/d_imageview"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/missing_preview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_h_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Large Text"
                android:textColor="@color/gray_ligth"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#88000000"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/lbl_h_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/gray_ligth" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
