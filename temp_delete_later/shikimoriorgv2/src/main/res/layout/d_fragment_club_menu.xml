<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/gray_dark"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_ligth"
                android:text="Действия:"
                android:textStyle="bold" />
            
            <ru.gslive.shikimori.org.v2.View_GridView
		 		android:id="@+id/gv_in_list"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		        android:layout_marginTop="5dp"
		        android:fastScrollAlwaysVisible="false"
		        android:fastScrollEnabled="false"
		        android:gravity="center"
		        android:horizontalSpacing="5dp"
		        android:numColumns="auto_fit"
		        android:scrollbarAlwaysDrawVerticalTrack="false"
		        android:stretchMode="columnWidth"
		        android:listSelector="@drawable/d_listview_custom"
		        android:verticalSpacing="5dp" >
		    </ru.gslive.shikimori.org.v2.View_GridView>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Содержание:"
                android:textColor="@color/gray_ligth"
                android:textStyle="bold" />

            <ru.gslive.shikimori.org.v2.View_GridView
                android:id="@+id/gv_club_addons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:fastScrollAlwaysVisible="false"
                android:fastScrollEnabled="false"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector="@drawable/d_listview_custom"
                android:numColumns="auto_fit"
                android:scrollbarAlwaysDrawVerticalTrack="false"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" >
            </ru.gslive.shikimori.org.v2.View_GridView>
            
        </LinearLayout>
    </ScrollView>

    

</LinearLayout>
