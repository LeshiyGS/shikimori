<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/d_user_item_menu" >

    <TextView
        android:id="@+id/tv_profile_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tv_item_new"
        android:paddingLeft="10dp"
        android:textColor="@color/gray_ligth"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_item_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_profile_menu_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/gray_ligth"
        android:textStyle="bold" />

</RelativeLayout>
