<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_all"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:background="@drawable/w_border"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/w_imageview"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/missing_preview" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignLeft="@+id/iv_avatar"
        android:layout_alignRight="@+id/iv_avatar"
        android:background="#99BBBBBB"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold" />

</RelativeLayout>
