<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?attr/altarixUiAttrTabBackgroundColor"
    android:orientation="horizontal">

    <View
        android:id="@+id/backViewPressed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/altarixUiAttrPressedColor"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/rlContainerBackAnimated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvText"
            style="?attr/altarixUiAttrTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test" />
    </FrameLayout>
</FrameLayout>