<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <View
        android:id="@+id/backViewPressed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/altarixUiAttrPressedColor"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/rlContainerBackAnimated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/defaultPaddingLarge"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabel"
                style="?attr/altarixUiAttrLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defaultPadding4"
                android:layout_marginRight="@dimen/defaultPadding4"
                android:text="sdsd" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvText"
                style="?attr/altarixUiAttrTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/defaultPadding4"
                android:layout_marginLeft="@dimen/defaultPadding4"
                android:text="test2" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>