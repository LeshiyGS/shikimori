<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/backViewPressed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/altarixUiAttrPressedColor"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/rlContainerBackAnimated"
        style="?attr/altarixUiAttrSelectorSimpleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/defaultPaddingLarge"
        android:paddingLeft="@dimen/defaultPadding4"
        android:paddingStart="@dimen/defaultPadding4"
        android:gravity="center_vertical">

        <android.support.v7.widget.AppCompatCheckedTextView
            android:id="@+id/tvText"
            style="?attr/altarixUiAttrTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>

    </LinearLayout>

</FrameLayout>