<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/defaultPaddingMini"
        android:visibility="gone"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvLabel"
        style="?attr/altarixUiAttrLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivImage" />

    <AutoCompleteTextView
        android:id="@+id/acText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/tvLabel"
        android:layout_toRightOf="@+id/ivImage"
        android:paddingLeft="@dimen/defaultPaddingMini"
        android:paddingRight="@dimen/defaultPaddingMini"
        style="?attr/altarixUiAttrEditTextStyle"
        /> <!--layout_marginTop в этом контроле не указываем! т.к. исчезает вьюха на Android 4.1.x-->

    <ProgressBar
        android:id="@+id/pbLoader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        style="@style/progresbar"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/defaultPaddingMini"
        />

</RelativeLayout>