    <style name="AltarixUiTeme" parent="AltarixUiBaseTeme" >
        <!--стиль текста-->
        <!--<item name="altarixUiAttrEditTextBackgroundStyle">@style/altarixUiEditTextStyle</item>-->
        <item name="colorAccent">@color/dialog_divider_color</item>
        <!-- Цвет подсветки нажатия -->
        <item name="colorControlHighlight">?attr/colorAccent</item>
        <!--цвет текста-->
        <item name="altarixUiAttrTextColor">@color/altarixUiTextColor</item>
        <!--цвет hint-->
        <item name="altarixUiAttrHintColor">@color/altarixUiHintColor</item>
        <!--цвет текста ошибки-->
