        <!-- Стиль табов-->
        <item name="altarixUiAttrTabStyle">@style/altarixUiTabStyle</item>
        <!--фон таба он отдельно от таба-->
        <item name="altarixUiAttrTabBackgroundColor">@color/altarixUiPressedColor</item>
