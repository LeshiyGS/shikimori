        <!-- Цвет фона сружочка когда нажимаешь на иконку-->
        <item name="altarixUiAttrLabelColor">@color/altarixUiLabelColor</item>
        <!-- style label-->
        <item name="altarixUiAttrLabelStyle">@style/altarixUiLabel</item>
        <!-- style label title-->
        <item name="altarixUiAttrLabelTitleStyle">@style/altarixUiText.TextTitle</item>
        <!-- style date-->
        <item name="altarixUiAttrDateStyle">@style/text.customDate</item>
        <!-- style text-->
        <item name="altarixUiAttrTextStyle">@style/altarixUiText</item>
        <!-- divider color-->
        <item name="altarixUiAttrDividerColor">@color/dialog_divider_color</item>

        <item name="colorControlNormal">@color/altarixUiNormalControl</item>
        <!-- style button-->
        <item name="android:buttonStyle">@style/altarixUiButton</item>

    </style>

    <style name="altarixUiButtonTheme" parent="AltarixUiTeme">
        <item name="colorButtonNormal">?attr/colorAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
