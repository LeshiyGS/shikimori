<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AltarixUiTeme">
        <item name="pullColor">@color/greenColor</item>
        <item name="android:textColorLink">@color/lightBlue</item>
        <item name="altarixUiAttrDividerColor">@color/lightBlue</item>
        <item name="altarixUiAttrTabBackgroundColor">@android:color/white</item>
        <item name="altarixUiAttrLabelColor">@color/colorLabels</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar" tools:ignore="NewApi">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorHint">@color/greenColor</item>
    </style>

